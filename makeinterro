#!/bin/bash

# 2 faciles
# 2 moyens
# 1 difficile

groups=()
groups=( "${groups[@]}" "# Question faciles" )
c=0

for i in interro/easy/{01,02}.md; do
	(( c = c+1 ))
	groups=( "${groups[@]}" "## Question $c" )
	groups=( "${groups[@]}" "$(cat "$i")" )
	groups=( "${groups[@]}" "" )
	groups=( "${groups[@]}" "" )
	groups=( "${groups[@]}" "" )
	groups=( "${groups[@]}" "" )
done

groups=( "${groups[@]}" "# Question moyennes" )

for i in interro/medium/{01,02}.md; do
	(( c = c+1 ))
	groups=( "${groups[@]}" "## Question $c" )
	groups=( "${groups[@]}" "$(cat "$i")" )
	groups=( "${groups[@]}" "" )
	groups=( "${groups[@]}" "" )
	groups=( "${groups[@]}" "" )
	groups=( "${groups[@]}" "" )
done

groups=( "${groups[@]}" "# Question dure" )

for i in interro/hard/01.md; do
	(( c = c+1 ))
	groups=( "${groups[@]}" "## Question $c" )
	groups=( "${groups[@]}" "$(cat "$i")" )
	groups=( "${groups[@]}" "" )
	groups=( "${groups[@]}" "" )
	groups=( "${groups[@]}" "" )
	groups=( "${groups[@]}" "" )
done

for el in "${groups[@]}"; do
	echo "${el}"
	echo
done
